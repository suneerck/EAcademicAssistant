<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.studentManagement.ViewStudent">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_basket"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivEdit"
        />

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_white"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_main_white"
        android:backgroundTint="@color/LiteWhite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/llHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLCourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/course"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_marginStart="50dp"/>

                    <TextView
                        android:id="@+id/tvLDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/department"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_marginStart="50dp"/>

                    <TextView
                        android:id="@+id/tvLSemester"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/semester"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_marginStart="50dp"/>

                    <TextView
                        android:id="@+id/tvLMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email_id"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_marginStart="50dp"/>

                    <TextView
                        android:id="@+id/tvLGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:layout_marginStart="50dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/tvDepartment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/tvSemester"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/tvMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/abc_123_com"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/male"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/pbLoading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>