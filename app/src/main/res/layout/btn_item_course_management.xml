<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/iconMainCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/iconTextMainCourse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_department"
        app:maxImageSize="30dp"
        app:backgroundTint="@color/white"
        app:fabCustomSize="80dp"
        />
    <TextView
        android:id="@+id/iconTextMainCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/departments"
        android:textSize="13sp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconMainCourse"/>


</androidx.constraintlayout.widget.ConstraintLayout>